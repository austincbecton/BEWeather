<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutInCardView3"
    android:layout_width="349dp"
    android:layout_height="150dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">


        <FrameLayout
            android:id="@+id/weatherIcon3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            >

            <ImageView
                android:id="@+id/weatherIcon3_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:backgroundTint="@color/standard_text_color" />


        </FrameLayout>



        <TextView
            android:id="@+id/currentLocationName_cardView3"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/currentLocation_temperature3"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/no_city_chosen"
            android:textStyle="bold"
            android:textColor="@color/standard_text_color"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/currentLocation_temperature3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/weatherIcon3"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:text="80"
            android:textStyle="bold"
            android:textColor="@color/standard_text_color"
            android:textAlignment="center"
            android:textSize="60sp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


