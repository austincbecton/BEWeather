<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="349dp"
    android:layout_height="150dp"
    android:backgroundTint="#000000"
    android:backgroundTintMode="src_atop"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayoutInCardView3"
        android:layout_width="349dp"
        android:layout_height="150dp"
        android:backgroundTint="#000000"
        android:backgroundTintMode="src_atop">

        <RelativeLayout
            android:id="@+id/cardViewBackgroundLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background_rain"
            android:backgroundTint="#C1FFFFFF"
            android:backgroundTintMode="src_over">


            <FrameLayout
                android:id="@+id/weatherIcon3"
                android:layout_width="150dp"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/weatherIcon3_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"

                    android:backgroundTint="@color/standard_text_color" />


            </FrameLayout>


            <TextView
                android:id="@+id/currentLocationName_cardView3"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/currentLocation_temperature3"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/no_city_chosen"
                android:textAlignment="center"
                android:textColor="@color/standard_text_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentLocation_temperature3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/weatherIcon3"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="80"
                android:textAlignment="center"
                android:textColor="@color/standard_text_color"
                android:textSize="60sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>




