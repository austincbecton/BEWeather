<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:background="@drawable/default_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/currentLocationName_searchbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="516dp"
        android:ems="10"
        android:hint="@string/currentLocation_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newWeatherBoxButton"
        android:layout_width="306dp"
        android:layout_height="113dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="7dp"
        android:background="#2400FFD4"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="50dp"
        app:cardBackgroundColor="#2400FFD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayoutInCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF">

            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:paddingStart="25dp"
                android:paddingTop="25dp"
                android:paddingEnd="25dp"
                android:paddingBottom="25dp"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/currentLocationName_cardView"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/currentLocation_temperature"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/no_city_chosen"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/currentLocation_temperature"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/weatherIcon"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="80"
                android:textAlignment="center"
                android:textSize="60sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/update_weather_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintBottom_toTopOf="@+id/update_screen_button"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

    <Button
        android:id="@+id/update_screen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Screen"
        app:layout_constraintBottom_toTopOf="@+id/currentLocationName_searchbar"
        app:layout_constraintEnd_toEndOf="@+id/update_weather_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/update_weather_button" />

    <Button
        android:id="@+id/enter_weather_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="ok"
        app:layout_constraintBottom_toBottomOf="@+id/currentLocationName_searchbar"
        app:layout_constraintEnd_toEndOf="@+id/currentLocationName_searchbar"
        app:layout_constraintTop_toTopOf="@+id/currentLocationName_searchbar"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>